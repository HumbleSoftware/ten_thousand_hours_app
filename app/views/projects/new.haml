%h2 Create Project:
-form_for :project, url(:projects, :create), :class => :form do |f|
  .field
    =f.label :title
    =f.error_message_on :title
    =f.text_field :title, :class => 'text-field'
  .field
    =f.label :description
    =f.error_message_on :description
    =f.text_area :description, :class => 'text-field'
  .field
    =f.submit 'Create', :class => :button
