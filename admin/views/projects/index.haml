.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:projects, :index)
      %li=link_to pat(:new), url(:projects, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:projects)
    .inner
      %table.table
        %tr
          %th.first=mat(:project, :id)
          %th=mat(:project, :account_id)
          %th=mat(:project, :title)
          %th=mat(:project, :description)
          %th=mat(:project, :created_at)
          %th=mat(:project, :updated_at)
          %th.last="&nbsp;"
        -@projects.each do |project|
          %tr
            %td.first=project.id
            %td=project.account_id
            %td=project.title
            %td=project.description
            %td=project.created_at
            %td=project.updated_at
            %td.last
              =button_to pat(:edit), url(:projects, :edit, :id => project.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:projects, :destroy, :id => project.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")
